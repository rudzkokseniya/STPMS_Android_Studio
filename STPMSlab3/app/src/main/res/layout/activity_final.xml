<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Final">
    <!--    android:orientation="vertical"-->
    <!--    android:columnCount="2"-->
    <!--    android:rowCount="8">-->

    <GridLayout
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:columnCount="2"
        android:rowCount="8">
        <TextView
            android:layout_column="0"
            android:layout_row="0"
            android:textSize="10pt"
            android:text="SurName"/>
        <TextView android:layout_column="1"
            android:layout_row="0"
            android:textSize="10pt"
            android:id="@+id/OutSurName"/>

        <TextView
            android:layout_column="0"
            android:layout_row="1"
            android:textSize="10pt"
            android:text="Name"/>
        <TextView android:layout_column="1"
            android:layout_row="1"
            android:textSize="10pt"
            android:id="@+id/OutName"/>

        <TextView
            android:layout_column="0"
            android:layout_row="2"
            android:textSize="10pt"
            android:text="MiddleName"/>
        <TextView android:layout_column="1"
            android:layout_row="2"
            android:textSize="10pt"
            android:id="@+id/OutMidName"/>

        <TextView
            android:layout_column="0"
            android:layout_row="3"
            android:textSize="10pt"
            android:text="BDay"/>
        <TextView android:layout_column="1"
            android:layout_row="3"
            android:textSize="10pt"
            android:id="@+id/OutBDay"/>

        <TextView
            android:layout_column="0"
            android:layout_row="4"
            android:textSize="10pt"
            android:text="Type"/>
        <TextView android:layout_column="1"
            android:layout_row="4"
            android:textSize="10pt"
            android:id="@+id/OutType"/>

        <TextView
            android:layout_column="0"
            android:layout_row="5"
            android:textSize="10pt"
            android:id="@+id/OutTextRazn"/>
        <TextView android:layout_column="1"
            android:layout_row="5"
            android:textSize="10pt"
            android:id="@+id/OutRazn"/>
        <ImageView
            android:layout_column="0"
            android:layout_row="6"
            android:layout_width="190dp"
            android:layout_height="150dp"
            android:id="@+id/Image"/>
        <LinearLayout
            android:layout_column="0"
            android:layout_row="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="Back"
                android:text="Back" />

            <Button

                android:id="@+id/butt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="Save"
                android:text="Save" />
        </LinearLayout>
    </GridLayout>

</ScrollView>