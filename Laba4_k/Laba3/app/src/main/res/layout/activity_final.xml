<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Final">
    <!--    android:orientation="vertical"-->
    <!--    android:columnCount="2"-->
    <!--    android:rowCount="8">-->

    <GridLayout
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:fillViewport="true"
        android:rowCount="12"
        android:scrollbars="vertical">

        <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:text="SurName"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/OutSurName"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="10pt" />

        <TextView
            android:layout_row="1"
            android:layout_column="0"
            android:text="Name"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/OutName"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="10pt" />

        <TextView
            android:layout_row="2"
            android:layout_column="0"
            android:text="MiddleName"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/OutMidName"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="10pt" />

        <TextView
            android:layout_row="3"
            android:layout_column="0"
            android:text="BDay"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/OutBDay"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="10pt" />
        <TextView
            android:layout_row="4"
            android:layout_column="0"
            android:text="Mail"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/OutMail"
            android:layout_row="4"
            android:layout_column="1"
            android:textSize="10pt" />

        <TextView
            android:layout_row="5"
            android:layout_column="0"
            android:text="Telephon"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/OutTel"
            android:layout_row="5"
            android:layout_column="1"
            android:textSize="10pt" />

        <TextView
            android:layout_row="6"
            android:layout_column="0"
            android:text="VK"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/OutVK"
            android:layout_row="6"
            android:layout_column="1"
            android:textSize="10pt" />


        <TextView
            android:layout_row="7"
            android:layout_column="0"
            android:text="Type"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/OutType"
            android:layout_row="7"
            android:layout_column="1"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/OutTextRazn"
            android:layout_row="8"
            android:layout_column="0"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/OutRazn"
            android:layout_row="8"
            android:layout_column="1"
            android:textSize="10pt" />

        <ImageView
            android:id="@+id/Image"
            android:layout_width="190dp"
            android:layout_height="150dp"
            android:layout_row="9"
            android:layout_column="0" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="10"
            android:layout_column="0">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="Back"
                android:text="Back" />

            <Button

                android:id="@+id/butt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="Save"
                android:text="Save" />
        </LinearLayout>
    </GridLayout>

</ScrollView>